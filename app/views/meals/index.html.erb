<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Calories</th>
      <th>Carbs</th>
      <th>Sodium</th>
      <th>Iron</th>
      <th>Sugar</th>
      <th>Fat</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.user_id %></td>
        <td><%= meal.calories %></td>
        <td><%= meal.carbs %></td>
        <td><%= meal.sodium %></td>
        <td><%= meal.iron %></td>
        <td><%= meal.sugar %></td>
        <td><%= meal.fat %></td>
        <td><%= meal.date %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

